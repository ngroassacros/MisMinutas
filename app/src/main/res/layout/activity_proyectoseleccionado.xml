<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@android:id/icon1"
        android:src="@android:drawable/sym_def_app_icon"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@android:id/icon2"
        android:layout_alignParentEnd="true"
        android:src="@android:drawable/ic_menu_add"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@android:id/icon1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@android:id/text1"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@android:id/icon1"
        android:layout_toEndOf="@android:id/icon1"
        android:layout_alignBottom="@android:id/icon1"
        android:layout_toLeftOf="@android:id/icon2"
        android:layout_toStartOf="@android:id/icon2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@android:id/text2"
        android:layout_below="@android:id/icon1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@android:id/icon2"
        android:layout_alignEnd="@android:id/icon2" />



</RelativeLayout>